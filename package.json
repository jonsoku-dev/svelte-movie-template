{
    "name": "svelte-snowpack-template",
    "description": "A preconfigured template for Snowpack with Svelte and TypeScript",
    "version": "1.0.0",
    "license": "MIT",
    "homepage": "https://github.com/ParkYoungWoong/svelte-snowpack-template",
    "repository": {
        "type": "git",
        "url": "https://github.com/ParkYoungWoong/svelte-snowpack-template.git"
    },
    "author": {
        "name": "Park Young-Woong(Heropy)",
        "email": "thesecon@gmail.com",
        "url": "https://heropy.blog/2019/09/29/svelte/"
    },
    "keywords": [
        "svelte",
        "snowpack",
        "typescript",
        "scss"
    ],
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "dev": "snowpack dev",
        "build": "snowpack build",
        "test": "wtr \"src/**/*.(test|spec).(t|j)s\"",
        "test:watch": "wtr \"src/**/*.(test|spec).(t|j)s\" --watch"
    },
    "browserslist": [
        "> 1%",
